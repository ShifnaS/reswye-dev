<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nexgensm.reswye.ui.lead.PersonalDetailDeleteActivity">



    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:orientation="horizontal"
    >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Personal_detail_delete_Back"
            android:background="@mipmap/back_arrow_black"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/folder_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/delete_graphics"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>
    <TextView
        android:layout_below="@+id/folder_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you sure want to delete"
        android:textColor="#616161"
        android:layout_marginTop="40dp"
        android:textSize="17dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/delete_line1"
        />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="the entire details ?"
        android:textColor="#616161"
        android:textSize="17dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/delete_line1"
        android:id="@+id/delete_line2"/>
    <Button
        android:id="@+id/yes_delete"
        style="@style/AppButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/delete_line2"
        android:layout_marginTop="50dp"
        android:background="@drawable/pink_round_button"
        android:text="Yes! I want to delete the details"
        android:textSize="16dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textAllCaps="false"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/delete_cancel"
        android:text="No! cancel the deleting"
        android:layout_marginLeft="20dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/yes_delete"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        style="@style/OnBoardingButtonStyle"
        android:textAllCaps="false"
        android:layout_alignParentEnd="true"/>


</RelativeLayout>
