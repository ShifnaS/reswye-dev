<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nexgensm.reswye.ui.lead.Additional_charecterestics">
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/toolbarcolor">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/AddFeature_Back"
            android:background="@null"
            android:src="@mipmap/status_bar_back_arrow"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/Additional_chara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Additional Characteristics "
            style="@style/AddNewHeader"
            android:gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/txt1"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Press, hold and move to top if you want"
        android:gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/txt2"
        android:layout_below="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="to add any feature"
        android:gravity="center_horizontal" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/scrl1"
       android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="0dp"
            android:background="#EBEBEF"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView

                    android:id="@+id/StyleTxt"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="30dp"/>
                <TextView
                    android:id="@+id/Doc_RightsTxt"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="30dp"/>
                <TextView
                    android:id="@+id/Garage_SpacesTxt"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="30dp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/TownshipTxt"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="30dp"/>

                <TextView
                    android:id="@+id/RoomsTxt"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="30dp"/>
                <TextView
                    android:id="@+id/ZoneTxt"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="30dp"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="40dp"
        android:id="@+id/scrl2"
        android:fillViewport="true"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/Style"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/blue_round_textview"
                    android:gravity="center"
                    android:text="Style"
                    android:layout_marginTop="80dp"
                    android:layout_marginLeft="50dp"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/Doc_Rights"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="0dp"
                    android:background="@drawable/blue_round_textview"
                    android:gravity="center"
                    android:text="Doc Rights"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/Garage_Spaces"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="80dp"
                    android:background="@drawable/blue_round_textview"
                    android:gravity="center"
                    android:layout_marginLeft="50dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="10dp"
                    android:text="Garage Spaces"
                    android:textColor="#ffffff" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Zone"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/blue_round_textview"
                    android:gravity="center"
                    android:text="Zone"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="0dp"

                    android:textColor="#ffffff" />



                <TextView
                    android:id="@+id/Rooms"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="50dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/blue_round_textview"
                    android:gravity="center"
                    android:text="Rooms"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/Township"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/blue_round_textview"
                    android:gravity="center"
                    android:text="Township"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:textColor="#ffffff" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">
    <Button
        android:id="@+id/save_Add_Chara"
        style="@style/AppButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:text="Save"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textAllCaps="false"/>
    </LinearLayout>
</LinearLayout>
