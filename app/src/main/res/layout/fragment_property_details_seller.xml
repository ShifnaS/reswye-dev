<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.nexgensm.reswye.ui.lead.PropertyDetailsSellerFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclepropertyviewphoto"
        android:layout_width="wrap_content"
        android:layout_height="250dp" />
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="wrap_content"
        android:layout_height="250dp" />
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:layout_below="@id/recyclepropertyviewphoto"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>
    <!--<TextView-->
        <!--android:layout_width="250dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/bedbathSFrooms"-->
        <!--android:layout_below="@id/address"-->
        <!--android:text="12 Bedrooms, 8 Baths, 9,350 SF"-->
        <!--android:textStyle="bold"-->
        <!--android:fontFamily="sans-serif"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:layout_marginLeft="20dp"/>-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/bedbathSFrooms"
        android:layout_below="@+id/address"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bed_count"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bedTxt"
            android:text="Bedrooms,"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bath_count"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bathTxt"
            android:text="Baths,"
            android:layout_marginLeft="5dp"/>
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/minSqft"
        android:layout_marginLeft="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/maxSqft"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" SF"
            android:id="@+id/SqftTxt"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/propertyIdtxt"
        android:layout_below="@id/bedbathSFrooms"
        android:text="Property ID"
        android:fontFamily="sans-serif"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/propertyId"
        android:layout_below="@id/bedbathSFrooms"
        android:layout_toRightOf="@id/propertyIdtxt"
        android:fontFamily="sans-serif"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="90dp"
        android:textStyle="bold"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/leadtxt"
        android:layout_below="@id/propertyIdtxt"
        android:text="Lead"
        android:fontFamily="sans-serif"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lead"
        android:layout_below="@id/propertyId"
        android:layout_toRightOf="@id/propertyIdtxt"
        android:fontFamily="sans-serif"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="90dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phonetxt"
        android:layout_below="@id/leadtxt"
        android:text="Phone"
        android:fontFamily="sans-serif"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phone"
        android:layout_below="@id/lead"
        android:layout_toRightOf="@id/propertyIdtxt"
        android:fontFamily="sans-serif"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="90dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailtxt"
        android:layout_below="@id/phonetxt"
        android:text="Email"
        android:fontFamily="sans-serif"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:layout_below="@id/phone"
        android:layout_toRightOf="@id/propertyIdtxt"
        android:fontFamily="sans-serif"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="90dp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yearbuilttxt"
        android:layout_below="@id/emailtxt"
        android:text="Year Built"
        android:fontFamily="sans-serif"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yearbuilt"
        android:layout_below="@id/email"
        android:layout_toRightOf="@id/propertyIdtxt"
        android:fontFamily="sans-serif"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="90dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/availableondatetxt"
        android:layout_below="@id/yearbuilttxt"
        android:text="Available On Date"
        android:fontFamily="sans-serif"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/availableondate"
        android:layout_below="@id/yearbuilt"
        android:layout_toRightOf="@id/propertyIdtxt"
        android:fontFamily="sans-serif"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="90dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/foreclosuredatetxt"
        android:layout_below="@id/availableondatetxt"
        android:text="Foreclosure Date"
        android:fontFamily="sans-serif"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/foreclosuredate"
        android:layout_below="@id/availableondate"
        android:layout_toRightOf="@id/propertyIdtxt"
        android:fontFamily="sans-serif"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="90dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/propertytypetxt"
        android:layout_below="@id/foreclosuredatetxt"
        android:text="Property Type"
        android:fontFamily="sans-serif"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/propertytype"
        android:layout_below="@id/foreclosuredate"
        android:layout_toRightOf="@id/propertyIdtxt"
        android:fontFamily="sans-serif"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="90dp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/featurestxt"
        android:layout_below="@id/propertytype"
        android:text="features"
        android:fontFamily="sans-serif"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/features"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
       android:layout_toRightOf="@+id/featurestxt"
        android:layout_below="@+id/propertytype"
        android:fontFamily="sans-serif"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/characteristicstxt"
        android:layout_below="@id/features"
        android:text="Characteristics"
        android:fontFamily="sans-serif"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/characteristics"
        android:layout_below="@id/features"
        android:layout_toRightOf="@id/propertyIdtxt"
        android:fontFamily="sans-serif"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="90dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pointofinteresttxt"
        android:layout_below="@id/characteristics"
        android:text="Point of Interest"
        android:fontFamily="sans-serif"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pointofinterest"
        android:layout_below="@id/characteristics"
        android:layout_toRightOf="@id/propertyIdtxt"
        android:fontFamily="sans-serif"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="90dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/propertydescriptiontxt"
        android:layout_below="@id/pointofinterest"
        android:text="Property Description"
        android:fontFamily="sans-serif"
        android:layout_marginTop="20dp"
        android:background="#d4d4d4"
        android:paddingStart="20dp"
        android:gravity="center_vertical"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/propertydescription"
        android:layout_below="@id/propertydescriptiontxt"
        android:text=""
        android:fontFamily="sans-serif"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/loggedtxt"
        android:layout_below="@id/propertydescription"
        android:text="Viewed Logged"
        android:fontFamily="sans-serif"
        android:layout_marginTop="10dp"
        android:background="#d4d4d4"
        android:paddingStart="20dp"
        android:gravity="center_vertical"
        android:textStyle="bold"
        />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/pagerViewedLogged"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_below="@+id/loggedtxt"
        android:layout_marginTop="10dp"/>


</RelativeLayout>
</ScrollView>
