<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.nexgensm.reswye.ui.lead.PersonalDetailsFragment">

        <!-- TODO: Update blank fragment layout -->
        <ImageView
            android:id="@+id/circleView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@mipmap/man" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/circleView"
            android:layout_alignTop="@id/circleView"
            android:src="@drawable/seller"

            />

        <TextView
            android:id="@+id/leadpersonal_name"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@id/circleView"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#616161"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/leadpersonal_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/circleView"
            android:layout_marginRight="20dp"
            android:src="@mipmap/lead_status_new" />

        <TextView
            android:id="@+id/leadpersonal_date"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@id/leadpersonal_name"
            android:layout_marginLeft="20dp"
            android:textColor="#616161"

            />

        <ImageView
            android:id="@+id/leadpersonal_address_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/leadpersonal_date"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/loaction" />

        <TextView
            android:id="@+id/leadpersonal_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/leadpersonal_date"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/leadpersonal_address_img"
            android:textColor="#616161" />

        <ImageView
            android:id="@+id/leadpersonal_phone_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/leadpersonal_address"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/phone_small" />

        <TextView
            android:id="@+id/leadpersonal_phone_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/leadpersonal_address"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/leadpersonal_address_img"
            android:textColor="#616161" />

        <ImageView
            android:id="@+id/leadpersonal_mail_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/leadpersonal_phone_txt"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/mail_small" />

        <TextView
            android:id="@+id/leadpersonal_mail_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/leadpersonal_phone_txt"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/leadpersonal_address_img"
            android:textColor="#616161" />

        <ImageView
            android:id="@+id/leadpersonal_phone"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/leadpersonal_mail_txt"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/call" />

        <ImageView
            android:id="@+id/leadpersonal_mail"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/leadpersonal_mail_txt"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/leadpersonal_phone"
            android:src="@mipmap/mail" />

        <ImageView
            android:id="@+id/leadpersonal_calendar"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/leadpersonal_mail_txt"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/leadpersonal_mail"
            android:src="@mipmap/calendar" />

        <ImageView
            android:id="@+id/deletebin"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/leadpersonal_mail_txt"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/deletebin" />

        <ImageView
            android:id="@+id/transfer_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/leadpersonal_mail_txt"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/deletebin"
            android:src="@mipmap/transfer_icon" />

        <ImageView
            android:id="@+id/edit_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/leadpersonal_mail_txt"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/transfer_icon"
            android:src="@mipmap/pencil" />

        <TextView
            android:id="@+id/leadpersonal_transfer_status_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/leadpersonal_phone"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Transfer Status" />

        <TextView
            android:id="@+id/leadpersonal_transfer_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/leadpersonal_phone"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/leadpersonal_transfer_status_txt"
            android:textColor="#616161" />

        <TextView
            android:id="@+id/leadpersonal_transferred_to_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/leadpersonal_additionaldetails_txt"
            android:layout_alignEnd="@+id/leadpersonal_name"
            android:layout_below="@+id/leadpersonal_transfer_status_txt"
            android:text="Transferred To" />

        <TextView
            android:id="@+id/leadpersonal_transferred_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/leadpersonal_transfer_status"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/leadpersonal_transfer_status_txt"
            android:textColor="#616161" />

        <TextView
            android:id="@+id/leadpersonal_additionaldetails_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/leadpersonal_transferred_to"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Additional Details"
            android:textColor="@color/ButtonTextColor" />

        <TextView
            android:id="@+id/leadpersonal_find_about_us_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/leadpersonal_additionaldetails_txt"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="How did you find about us?"

            />

        <TextView
            android:id="@+id/leadpersonal_find_about_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/leadpersonal_find_about_us_txt"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#616161"

            />
    </RelativeLayout>
</ScrollView>
