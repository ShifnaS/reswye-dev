<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nexgensm.reswye.ui.calendar.AppointmentDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:orientation="horizontal"
        android:background="@color/toolbarcolor">

        <ImageButton
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/appointment_details_close"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:src="@drawable/close"/>

        <TextView
            android:id="@+id/appointment_details_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Appointment Details "
            style="@style/AddNewHeader"
            android:gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:layout_weight="1"/>

    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >



    <ImageView
        android:id="@+id/lead_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_2"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/seller"
        android:layout_alignTop="@id/lead_pic"
        android:layout_alignRight="@id/lead_pic"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/leadname"
        android:layout_below="@+id/lead_pic"
        android:text="Charlie Deets"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:textSize="18sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/leadidtxt"
        android:layout_below="@+id/leadname"
        android:text="Lead Id:"
        android:layout_marginStart="20dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/leadid"
        android:text="LD103"
        android:layout_toRightOf="@id/leadidtxt"
        android:layout_below="@id/leadname"/>
    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/threedots"
        android:src="@mipmap/deletebin"
        android:layout_below="@id/leadname"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:background="@null"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:layout_below="@id/threedots"
        android:layout_marginStart="20dp"
        android:text="12 Shelter Bay Dr Great Neck,  \nNy,United States"
        android:textSize="18sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/appointmentidtxt"
        android:layout_below="@+id/address"
        android:text="Appointment Id"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/appointmentid"
        android:layout_below="@+id/address"
        android:text="APT103"
        android:layout_toRightOf="@id/appointmentidtxt"
        android:layout_marginStart="70dp"
        android:layout_marginTop="40dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/appointmentdatetxt"
        android:layout_below="@+id/appointmentid"
        android:text="Appointment Date"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/appointmentdate"
        android:layout_below="@+id/appointmentid"
        android:text="23 jul 2017"
        android:layout_toRightOf="@id/appointmentidtxt"
        android:layout_marginStart="70dp"
        android:layout_marginTop="5dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/appointmenttimetxt"
        android:layout_below="@+id/appointmentdate"
        android:text="Appointment Time"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/appointmenttime"
        android:layout_below="@+id/appointmentdate"
        android:text="10:00AM"
        android:layout_toRightOf="@id/appointmentidtxt"
        android:layout_marginStart="70dp"
        android:layout_marginTop="5dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/remindersetontxt"
        android:layout_below="@+id/appointmenttime"
        android:text="Reminder set on"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/remainderseton"
        android:layout_below="@+id/appointmenttime"
        android:text="22 jul 2017,10.00 AM"
        android:layout_toRightOf="@id/appointmentidtxt"
        android:layout_marginStart="70dp"
        android:layout_marginTop="5dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/purposetxt"
        android:layout_below="@+id/remainderseton"
        android:text="Purpose"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/purpose"
        android:layout_below="@+id/purposetxt"
        android:text="fdfgdgfdgfd ghfghfghfghf fghfghfghf fgfghfg ghfhgfh ghghghhgh gfghh gfghfhgfghfghfghf ghhfhfghfghf ghhfghfghf vghhfghfhgfhg vghgfhf"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/meeting_minutes"
                android:layout_below="@+id/purpose"
                android:text="Meeting Minutes"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/meeting_minutesTxt"

                android:layout_below="@+id/meeting_minutes"
                android:text="fdfgdgfdgfd ghfghfghfghf fghfghfghf fgfghfg ghfhgfh ghghghhgh gfghh gfghfhgfghfghfghf ghhfhfghfghf ghhfghfghf vghhfghfhgfhg vghgfhf"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                />

            <Button
                android:id="@+id/reshedule_btn"
                style="@style/AppButton"
                android:layout_below="@id/meeting_minutesTxt"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                android:text="Reshedule"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textAllCaps="false"
                />
    <Button
        android:id="@+id/cancel_btn"
        style="@style/AppButton"
        android:layout_below="@id/meeting_minutesTxt"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:layout_toRightOf="@id/reshedule_btn"
        android:text="Cancel"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textAllCaps="false"
        />
        </RelativeLayout>
    </ScrollView>



</RelativeLayout>
